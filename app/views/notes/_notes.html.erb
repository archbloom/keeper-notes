<h3 class='text-center mt-1'><%= tab_header %></h3>

<div class='row'>
  <% notes.each do |note| %>
    <div class='col-md-4 p-2'>
      <div class='card'>
        <%= link_to note, title: "by #{note.user.email}", class: 'text-decoration-none', data: { turbolinks: false } do %>
          <div class='card-header'>
            <span class='d-inline-block text-truncate' style="max-width: 250px;"><%= note.title.titleize %></span><br />
            Updated at <%= note.updated_at.in_time_zone('Mumbai').strftime("%b %d, %Y at %I:%M %p") %>
          </div>
        <% end %>
        <div class='card-body text-truncate'>
          <% content = note.content %>
          <a href='javascript:;' class='card-link' data-toggle='popover' data-trigger='hover' data-content="<%= content %>">
            <span class='text-muted'><%= content %></span>
          </a>
        </div>
        <div class='card-footer'>
          <% note.tags.each do |tag| %>
            <span class='badge badge-info'><%= tag.name %></span>
          <% end %><br />
        </div>
      </div>
    </div>
  <% end %>
</div>
